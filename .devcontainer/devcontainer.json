{
  "name": "Intro to AI (Codespaces)",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": ["Continue.continue"],
      "settings": { "continue.telemetryEnabled": false }
    }
  },
  "remoteEnv": {
    "OPENROUTER_API_KEY": "${containerEnv:OPENROUTER_API_KEY}"
  },
  "postCreateCommand": "bash .devcontainer/setup-ide-tutor.sh",
  "forwardPorts": [3000, 8888]
}
