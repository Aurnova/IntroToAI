{
  "name": "Aurnova Agent Core",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "features": {},
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "redhat.vscode-yaml",
        "github.vscode-pull-request-github"
      ]
    }
  },
  "postCreateCommand": "pip install -e '.[dev]' && python scripts/check_env.py && (pytest -q tests/test_smoke.py || true)",
  "remoteUser": "vscode"
}
